<section class="hero py-16">
    <div class="container mx-auto flex items-center justify-between">
        <div class="w-1/2">
            <h6 class="text-lg"><em>Buy anything?</em></h6>
            <h1 class="text-3xl md:text-6xl font-bold">Don't wait !</h1>
        
<a href="/cart"><button style="background-color: rgb(239, 74, 74);" class="px-6 py-2 rounded-full text-white font-bold mt-4 btn-primary">Order Now</button></a>
        </div>
        <div class="w-1/2">
            <img src="/images/sale.jpg" alt="">
        </div>
    </div>
</section>
<section class="menu container mx-auto py-8">
    <h1 class="text-xl font-bold mb-8">Tech Products</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
        <% pizzas.filter(product => product.categories === 'tech').forEach(function(product) { %>
        <div class="bg-white rounded-lg overflow-hidden shadow-lg">
            <img class="h-64 w-full object-cover" src="/uploads/<%= product.image %>" alt="<%= product.name %>">
            <div class="p-4">
                <h2 class="mb-2 text-lg font-semibold"><%= product.name %></h2>
                <div class="flex items-center justify-between mt-4">
                    <span class="font-bold text-lg text-gray-700">₹<%= product.price %></span>
                   <a href="/products/<%= product._id %>"><button class="bg-green-500 hover:bg-green-600 transition-colors text-white py-2 px-4 rounded-full flex items-center"><span>+</span><span class="ml-4">view</span></button></a>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</section>
